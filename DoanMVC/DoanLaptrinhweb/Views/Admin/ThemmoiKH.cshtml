@model DoanLaptrinhweb.Models.KhachHang

@{
    ViewBag.Title = "THÊM KHÁCH HÀNG";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM MỚi KHÁCH HÀNG</h2>

@using (Html.BeginForm("ThemmoiKH", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
