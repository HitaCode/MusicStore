@using DoanLaptrinhweb.Models
@model List<Giohang>
@{
    ViewBag.Title = "GIỎ HÀNG";
    Layout = "~/Views/Shared/_LayoutDetails.cshtml";
}  <h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
   <table align="center" border="1">
       <tr style="text-align:center; font-weight:bold">
           <td> Mã Nhạc </td>
           <td> Tên Nhạc </td>
           <td> Ảnh bìa </td>
           <td> Số lượng </td>
           <td> Đơn giá </td>
           <td> Thành tiền </td>
           <td width="50px"></td>
           <td width="50px"></td>
           <td width="50px"></td>
       </tr>
       @foreach (var item in Model)
       {
           <tr style="text-align:center; font-weight:bold">
               <td>@item.iMaNhac </td>
               <td>@item.sTenNhac</td>
               <td><img src="~/Hinhsanpham/@item.sAnhBia" width="150"></td>
               @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSp = item.iMaNhac }))
               {
                   <td>
                       <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color:yellow" />
                   </td>
                   <td>@String.Format("{0:0,0}", item.dDongia) </td>
                   <td>@String.Format("{0:0,0}", item.dThanhtien) </td>
                   <td><a href="@Url.Action("Details","MusicStore", new { id = item.iMaNhac })"> Chi Tiết </a></td>
                   <td>@Html.ActionLink("Xóa", "XoaGioHang", new { @iMasp = item.iMaNhac })</td>
                   <td><input type="submit" value="Cập Nhật" /></td>
               }
           </tr>
       }
       <tr style="font-weight: bold; text-align:right; color:red">
           <td colspan="4"> Số lượng nhạc: @ViewBag.Tongsoluong </td>
           <td colspan="5"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
       </tr>
       <tr style="font-weight: bold; color:blue; text-align:right ">
           <td colspan="9">
               @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang")
           </td>
       </tr>
       <tr style="font-weight: bold; color:blue; text-align:right ">
           <td colspan="9" align="center">
               @Html.ActionLink("ĐẶT HÀNG", "Dathang", "GioHang")
           </td>
       </tr>
   </table>




