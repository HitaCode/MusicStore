@model DoanLaptrinhweb.Models.Nhac

@{
    ViewBag.Title = "CHI TIẾT SẢN PHẨM";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÔNG TIN CHI TIẾT NHẠC </h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên nhạc:
        </dt>
        <dd>
            @Html.DisplayNameFor(model => model.TenNhac)
        </dd>
        <dt>
            Tên ca sĩ: 
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenCasi)
        </dd>
        <dt>
            Giá bán:
        </dt>
        <dd>
            @String.Format("{0:0,0}", Model.GiaBan) VNĐ
        </dd>
        <dt>
            Ảnh bìa:
        </dt>
        <dd>
            <img src="@Url.Content("~/Hinhsanpham/"+ Model.AnhBia)" width="120" />
        </dd>
        <dt>
            NGày cập nhật:
        </dt>
        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat)
        </dd>
        <dt>
            Số lượng tồn:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuongTon)
        </dd>
        <dt>
            Dạng nhạc
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Dangnhac.TenDangnhac)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("ĐIỀU CHỈNH", "Suanhac", new { id = Model.MaNhac }) |
    @Html.ActionLink("TRỞ VỀ", "Nhac")
</p>
